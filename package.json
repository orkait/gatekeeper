{
  "name": "orkait-auth",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "build": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "db:init:local": "wrangler d1 execute orkait_auth --local --file migrations/0001_init.sql",
    "db:init:prod": "wrangler d1 execute orkait_auth --file migrations/0001_init.sql",
    "test:api": "newman run postman/orkait-auth.postman_collection.json -e postman/orkait-auth.postman_environment.json",
    "test:api:prod": "newman run postman/orkait-auth.postman_collection.json -e postman/orkait-auth-production.postman_environment.json",
    "test:api:e2e": "newman run postman/orkait-auth.postman_collection.json -e postman/orkait-auth.postman_environment.json --folder \"E2E Flow\""
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.0",
    "hono": "^4.0.0",
    "jose": "^6.1.3",
    "resend": "^6.9.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240405.0",
    "@vitest/coverage-v8": "^4.0.18",
    "newman": "^6.2.2",
    "typescript": "^5.4.0",
    "vitest": "^4.0.0",
    "wrangler": "4"
  }
}
