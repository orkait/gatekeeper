# Environment Configuration
ENVIRONMENT=development

# Database (Cloudflare D1)
# DB binding is configured in wrangler.toml

# Authentication Secrets (REQUIRED)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-min-32-chars
INTERNAL_SECRET=your-internal-secret-min-32-chars

# JWT Configuration (Optional)
JWT_EXPIRES_IN=900
REFRESH_TOKEN_EXPIRES_IN=604800

# RSA Keys for JWKS (Optional - for asymmetric JWT signing)
# Generate with: node generate-keys.cjs
RSA_PRIVATE_KEY=
RSA_PUBLIC_KEY=
RSA_KEY_ID=orka-auth-key-1

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=

# Email Service (Optional - Resend)
RESEND_API_KEY=
FROM_EMAIL=noreply@orkait.com
APP_URL=https://orkait.com

# Webhook Configuration (Optional)
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_MAX_RETRIES=3

# CORS Configuration (Optional)
ALLOWED_ORIGINS=*

# Storage Adapter (Optional)
# Options: memory, d1, auto
STORAGE_ADAPTER=auto

# Cache (KV Namespace)
# AUTH_CACHE binding is configured in wrangler.toml

# Backup Bucket (R2)
# BACKUP_BUCKET binding is configured in wrangler.toml
